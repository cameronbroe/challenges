<section class="form-hero hero is-success is-bold">
  <div class="hero-head form-messages is-hidden" data-target="form.messagesSection">
    <div class="container">
      <%= render partial: 'messages' %>
    </div>
  </div>
  <div class="hero-body">
    <div class="container">
      <h1 class="title">Import Sales Data Spreadsheet</h1>
      <%= render partial: 'form' %>
    </div>
  </div>
</section>

<section class="section">
  <div class="container">
    <h1 class="title">Sales Data</h1>
    <table class="table is-bordered is-striped is-narrow is-hoverable is-fullwidth">
      <thead>
        <tr>
          <th>Customer Name</th>
          <th>Item Description</th>
          <th>Item Price</th>
          <th>Quantity</th>
          <th>Merchant Name</th>
          <th>Merchant Address</th>
        </tr>
      </thead>
      <tfoot>
        <tr>
          <td>Total Revenue</td>
          <td colspan="5" class="has-text-right"><%= number_to_currency(@total_revenue) %></td>
        </tr>
      </tfoot>
      <tbody>
        <% @data.each do |row| %>
          <tr>
            <td><%= row[:"Customer Name"] %></td>
            <td><%= row[:"Item Description"] %></td>
            <td><%= number_to_currency(row[:"Item Price"]) %></td>
            <td><%= row[:"Quantity"] %></td>
            <td><%= row[:"Merchant Name"] %></td>
            <td><%= row[:"Merchant Address"] %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</section>